@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --header-height: 60px;
}

#app {
  font-family: Avenir, Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
  color: #2c3e50;
}

#nav {
  height: var(--header-height);

  .logo {
    height: calc(var(--header-height) - 10px);
  }

  & a {
    font-weight: bold;
    color: #2c3e50;

    &.router-link-exact-active {
      color: #42b983;
    }
  }
}